<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeCard"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#F6F1F1"
    android:id="@+id/homeRLayout">

    <ImageView
        android:id="@+id/imgHomeRest"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher_round"
        android:padding="12dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/txtHomeRestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pind Tadka"
        android:layout_toRightOf="@+id/imgHomeRest"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="22dp"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/blackish"/>
    <TextView
        android:id="@+id/txtHomePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.280/person"
        android:layout_below="@id/txtHomeRestName"
        android:layout_toRightOf="@id/imgHomeRest"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#5E000000"/>

    <ImageButton
        android:id="@+id/btnHomeFav"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_fav_button"
        android:background="#00000000"
        android:layout_marginTop="28dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/txtHomeRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.4"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btnHomeFav"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="#F57F17"/>


</RelativeLayout>
</androidx.cardview.widget.CardView>